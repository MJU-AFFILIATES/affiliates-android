<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/orange_light"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/signup_card_view_cv"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/signup_card_view_cv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="89dp"
            app:cardCornerRadius="30dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.naver.maps.map.MapView
                        android:id="@+id/store_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/store_image_iv"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="189dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/gray"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/store_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가게명"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/store_image_iv"/>

                <LinearLayout
                    android:id="@+id/star_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/store_title_tv"
                    app:layout_constraintStart_toStartOf="@id/store_image_iv"
                    app:layout_constraintEnd_toEndOf="@id/store_image_iv">

                    <ImageView
                        android:id="@+id/star_01"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star_on_orange"/>

                    <ImageView
                        android:id="@+id/star_02"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star_on_orange"/>

                    <ImageView
                        android:id="@+id/star_03"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star_on_orange"/>

                    <ImageView
                        android:id="@+id/star_04"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star_on_orange"/>

                    <ImageView
                        android:id="@+id/star_05"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/star_on_orange"/>

                </LinearLayout>
                
                <ImageView
                    android:id="@+id/store_review_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/review"
                    android:layout_marginEnd="40dp"
                    app:layout_constraintTop_toTopOf="@id/star_layout"
                    app:layout_constraintEnd_toEndOf="parent"/>

<!--                <FrameLayout-->
<!--                    android:id="@+id/review_frame_layout"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="0dp"-->
<!--                    android:layout_marginStart="15dp"-->
<!--                    android:layout_marginEnd="15dp"-->
<!--                    android:layout_marginTop="150dp"-->
<!--                    android:layout_marginBottom="150dp"-->
<!--                    android:background="@drawable/border_10dp_stroke"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent">-->



<!--                </FrameLayout>-->


                <TextView
                    android:id="@+id/store_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_activity_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:background="@drawable/style_contents"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/star_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@id/store_content_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_review"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>